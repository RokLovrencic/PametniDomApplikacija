@page
@model PametniDomApplikacija.Pages.OknoPorabeElektrikecshtmlModel
@{
    ViewData["Title"] = "Elektrika";
}


<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>

<div style="background:white;width:700px;margin:auto ">
<canvas id="myChart" style="width:100%;max-width:700px;margin:auto"></canvas>
</div>


<script>
    var xyValues = [
        { x: 10, y: 1 },
        { x: 30, y: 2 },
        { x: 50, y: 3 },
        { x: 60, y: 4 },
        { x: 80, y: 5 },
        { x: 100, y: 6 },
        { x: 120, y: 7 },
        { x: 140, y: 8 },
        { x: 180, y: 9 },
        { x: 210, y: 10 },
        { x: 250, y: 11 }
    ];

    new Chart("myChart", {
        type: "scatter",
        data: {
            datasets: [{
                pointRadius: 4,
                pointBackgroundColor: "black",
                data: xyValues
            }]
        },
        options: {
            legend: { display: false },
            scales: {
                xAxes: [{ ticks: { min: 40, max: 300 } }],
                yAxes: [{ ticks: { min: 1, max: 12 } }],
            }
        }
    });
</script>